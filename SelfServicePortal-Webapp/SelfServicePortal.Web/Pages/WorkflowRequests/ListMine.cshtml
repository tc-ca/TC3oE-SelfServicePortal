@page
@model ListMineModel

@{
	ViewData["Title"] = @Localizer["History"];
}
<style>
	table {
		table-layout: fixed;
	}
</style>
<section>
	<h1>@Localizer["Header"]</h1>
	<table class="table table-striped">
		<colgroup>
			<col span="1" style="width:20%">
			<col span="1" style="width:65%">
			<col span="1" style="width:15%">
		</colgroup>
		<thead>
			<tr>
				<th scope="col">@Localizer["Date"]</th>
				<th scope="col">@Localizer["Name"]</th>
				<th scope="col">@Localizer["State"]</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var workflowRequest in Model.Requests)
			{
				<tr>
					<td>@workflowRequest.Request.DateInitiated</td>
					<td>@workflowRequest.Request.Title</td>
					<td>@workflowRequest.State</td>
				</tr>
			}
		</tbody>
	</table>
</section>